<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nýskráning dagforeldris"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingBottom="20pt"
        />

    <LinearLayout android:layout_height="wrap_content" android:layout_width="150pt">
        <EditText
            android:id="@+id/firstName"
            android:layout_width="70pt"
            android:layout_height="wrap_content"
            android:hint="Fornafn"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/lastName"
            android:layout_width="70pt"
            android:layout_height="wrap_content"
            android:hint="Eftirnafn"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/ssn"
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:hint="Kennitala"
        />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:hint="@string/email_field_text"
        />

    <EditText
        android:id="@+id/mobile_field"
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:hint="Símanúmer"
        />

    <LinearLayout android:layout_height="wrap_content" android:layout_width="150pt">
        <EditText
            android:id="@+id/locationCode"
            android:layout_width="45pt"
            android:layout_height="wrap_content"
            android:hint="Póstnúmer"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/location"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:hint="Bæjarfélag"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/address"
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:hint="Heimilisfang"
        />

    <EditText
        android:id="@+id/experience"
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Starfsreynsla í árum"
        />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/password_field_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20pt"
        android:paddingTop="10pt"
        android:baselineAligned="false">

        <Button
            android:id="@+id/register_button"
            android:layout_width="70pt"
            android:layout_height="wrap_content"
            android:text="@string/register_button" />
    </LinearLayout>


</LinearLayout>