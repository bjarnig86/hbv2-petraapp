<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="16dp">

                <TextView
                    android:id="@+id/dateTextView_day"
                    android:layout_width="match_parent"
                    android:layout_height="14sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Þri"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:textSize="14sp"
                    android:textColor="@color/primaryVariant"/>

                <TextView
                    android:id="@+id/dateTextView_num"
                    android:layout_width="match_parent"
                    android:layout_height="24sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="18"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/primaryContent"/>

                <TextView
                    android:id="@+id/dateTextView_month"
                    android:layout_width="match_parent"
                    android:layout_height="16sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_weight="1"
                    android:text="Nov"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/teal_200"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/primary"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                >

                <TextView
                    android:id="@+id/childNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child Name"
                    android:textSize="18sp"
                    android:textColor="@color/primaryVariant"
                    android:textStyle="bold"
                    android:textAppearance="?attr/textAppearanceHeadline6"
/>

                <TextView
                    android:id="@+id/commentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hér er rosalegur texti sem getur verið frekar langur og allskonar kúl stuff"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/primary"/>

            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/sleepFromIcon"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/sleep" />

            <TextView
                android:id="@+id/sleepFromToTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="12:00 - 14:00"
                android:textSize="18dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/primary"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/appetiteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:text="Mjög Góð"
                android:textSize="18dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/primary"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/appetiteIcon"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:src="@drawable/utensils_solid" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>